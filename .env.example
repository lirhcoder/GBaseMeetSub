# 环境配置示例文件
# 复制此文件为 .env 并修改配置

# Whisper模型设置
WHISPER_MODEL_SIZE=large-v3
# 可选: tiny, base, small, medium, large, large-v2, large-v3

# 计算设备
DEVICE=auto
# 可选: auto, cuda, cpu

# 日志级别
LOG_LEVEL=INFO
# 可选: DEBUG, INFO, WARNING, ERROR

# 数据目录
DATA_DIR=./data
OUTPUT_DIR=./output
LOG_DIR=./logs

# 批处理设置
BATCH_SIZE=5
MAX_AUDIO_LENGTH=1800  # 秒

# 术语管理
MIN_TERM_FREQUENCY=3  # 最小频率阈值
TERM_CONFIDENCE_THRESHOLD=0.8

# API设置（如果使用云服务）
# OPENAI_API_KEY=your_key_here
# AZURE_SPEECH_KEY=your_key_here